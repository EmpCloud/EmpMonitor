{
  "openapi": "3.0.0",
  "info": {
    "title": "Employee Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/activity/add-activity": {
      "post": {
        "summary": "Add activity",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sign": {
                    "type": "string"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                },
                "required": ["sign", "data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Activity added successfully"
          },
          "400": {
            "description": "Invalid input data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}